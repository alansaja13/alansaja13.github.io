---
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
  {
    title: "Sobre m√≠",
    label: "sobre-mi",
    url: "/#sobre-mi",
  },
  {
    title: "Experiencia",
    label: "experiencia",
    url: "/#experiencia",
  },
  {
    title: "Proyectos",
    label: "proyectos",
    url: "/#proyectos",
  },
  {
    title: "Contacto",
    label: "contacto",
    url: "mailto:alansaja13@gmail.com",
  },
];
---

<header class="fixed top-0 z-50 flex items-center justify-center w-full mx-auto pt-6 px-4">
  <nav class="shoji-panel backdrop-blur-md px-6 py-3 flex items-center justify-between gap-4 max-w-5xl w-full">
    <div class="flex items-center gap-2">
      <div class="w-8 h-8 bg-gradient-crimson rounded-full flex items-center justify-center">
        <span class="text-washi-50 font-bold text-sm">AS</span>
      </div>
      <span class="font-serif text-crimson-600 dark:text-koban font-semibold hidden sm:block">
        Alan Saja
      </span>
    </div>

    <div class="flex items-center gap-1 md:gap-2">
      {navItems.map((link) => (
        <a
          class="group relative px-3 py-2 text-sm font-medium text-sumi-700 dark:text-washi-200 
                 hover:text-crimson-600 dark:hover:text-koban transition-all duration-300"
          aria-label={link.label}
          href={link.url}
        >
          <span class="relative z-10">{link.title}</span>
          <span class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-crimson scale-x-0 
                       group-hover:scale-x-100 transition-transform duration-300 origin-left" />
        </a>
      ))}
      <div class="ml-2 pl-2 border-l border-crimson-200 dark:border-koban/30">
        <ThemeToggle />
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const sections = document.querySelectorAll("section");
    const navItems = document.querySelectorAll("header nav a");

    const callback = (entries: any[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item) => {
            if (item.getAttribute("aria-label") == entry.target.id) {
              item.classList.add("text-crimson-600");
              item.classList.add("dark:text-koban");
            } else {
              item.classList.remove("text-crimson-600");
              item.classList.remove("dark:text-koban");
            }
          });
        }
      });
    };

    const observer = new IntersectionObserver(callback, {
      root: null,
      rootMargin: "0px",
      threshold: 0.3,
    });

    sections.forEach((section) => {
      observer.observe(section);
    });

    document.onvisibilitychange = () => {
      if (document.visibilityState === "hidden") {
        observer.disconnect();
      } else {
        sections.forEach((section) => {
          observer.observe(section);
        });
      }
    };
  });
</script>

<style>
  nav {
    animation: slideDown 0.5s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
